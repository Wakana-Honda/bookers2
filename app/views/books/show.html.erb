#create book遷移ページ

<h1>User info</h1>
<h1>New book</h1>

<h1>book detail page</h1>

<% @books.each do |book| %>

<div>
  <p>投稿ユーザー画像：<%= image_tag book.get_image %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
  <p>本の名前：<%= book.user.name%></p>
  <p>説明：<%= book.user.name %></p>
  
  <% if @book.user == current_user %>
    <%= link_to "edit", edit_book_path(@book)%>
    <%= link_to "destroy", book_path(@book), method: :delete %>
  <% end %>
</div>

<% end %>
