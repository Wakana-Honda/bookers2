#create book遷移ページ

<h1>User info</h1>

<h1>New book</h1>
  <%= form_with model: @book,url: '/books', method: :post do |f| %>
   <h4>Titele</h4>
    <%= f.text_field :title %>
   <h4>Opinipn</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>

<% @books.each do |book| %>

<div>
  <p><%= image_tag book.get_image %></p>
  <p><%= book.user.name %></p>
  <p>本の名前 <%= @book.title %></p>
  <p>説明<%= @book.body %></p>
  
  <% if @book.user == current_user %>
    <%= link_to "edit", edit_book_path(@book)%>
    <%= link_to "destroy", book_path(@book), method: :delete %>
  <% end %>
</div>

<% end %>
