    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>


<%= form_with model: @book do |f| %>
  <div class="form-group">  
    <label for="book_title">Titele</label>
    <%= f.text_field :title,class:"form-control book_title",id:"book_title" %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinipn</label>
    <%= f.text_area :body,class:"form-control book_body",id:"book_body" %>
  </div>
  <div class="form-group">  
  <%= f.submit "Update Book",class:"btn btn-success" %>
  </div>
    <%= link_to "Show",book_path(@book.id),class:"(@book.id)" %>
    |
    <%= link_to "Back", books_path,class:"back" %>
<% end %>

</div>
</div>
</div>

